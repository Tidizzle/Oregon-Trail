<Window x:Class="Oregon_Trail.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oregon_Trail"
        mc:Ignorable="d"
        Title="OREGON TRAIL" Height="250" Width="300"
        ResizeMode="NoResize" Icon="/Resource/wagon.ico">
    <Grid Margin="0,0,0,1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label x:Name="label1" Content="Oregon"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50" Grid.Row="0" Height="76"  Margin="0,0,0,130" Width="174" Grid.ColumnSpan="2"/>
        <Label x:Name="label2" Content="Trail" HorizontalAlignment="Center"  Height="66" Width="104" VerticalAlignment="Center" Grid.ColumnSpan="2" FontSize="50" Margin="0,0,0,25" />
        <Button x:Name="playbutton" Content="PLAY" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Height="40" FontSize="30"  Grid.ColumnSpan="2" Margin="0,0,0,-125" Click="playbutton_Click" />
    </Grid>
</Window>