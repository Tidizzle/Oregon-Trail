<Window x:Class="Oregon_Trail.Windows.Startwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oregon_Trail.Windows"
        mc:Ignorable="d"
        Title="OREGON TRAIL" Height="308
        " Width="400" ResizeMode="NoResize" Icon="/Resource/wagon.ico">
    <Grid Margin="0,0,0,-5">
        <Grid.RowDefinitions>

            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>

        </Grid.RowDefinitions>
        <Button x:Name="ContinueButton" Content="Continue" Height="70" Width="200" VerticalAlignment="Center" FontSize="35" Grid.Row="0" Click="ContinueButton_Click" />
        <Button x:Name="NewButton" Content="New" Height="70" Width="200" VerticalAlignment="Center" FontSize="35" Grid.Row="1" Click="NewButton_Click"/>
        <Button x:Name="SettingsButton" Content="Settings" Height="70" Width="200" VerticalAlignment="Center" FontSize="35" Grid.Row="2" Click="SettingsButton_Click"/>
    </Grid>
</Window>
